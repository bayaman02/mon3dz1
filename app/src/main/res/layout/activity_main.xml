<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/white"
        app:title="Intent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pirple" />

    <EditText
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="12sp"
        app:layout_constraintBottom_toTopOf="@id/bt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите email" />

    <EditText
        android:id="@+id/bt_2"
        android:layout_marginHorizontal="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите "
        app:layout_constraintBottom_toTopOf="@id/bnt_bottom"
        android:layout_marginBottom="12sp"/>

    <EditText
        android:id="@+id/bnt_bottom"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="45sp"
        app:layout_constraintBottom_toTopOf="@id/btn_galery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите техт"
         />


    <com.google.android.material.button.MaterialButton
        app:cornerRadius="0sp"
        android:id="@+id/btn_galery"
        android:textSize="30sp"
        android:backgroundTint="@color/pirple"
        android:layout_marginHorizontal="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="0sp"
        android:textSize="30sp"
        android:layout_marginTop="500sp"
        android:backgroundTint="@color/pirple"
        android:layout_marginHorizontal="23sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>